@model Edukator.EntityLayer.Concrate.AppRole
@{
    ViewData["Title"] = "Edukator | Rol Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header text-white bg-primary">Roller</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <input type="hidden" asp-for="Id" />
                    <label for="categoryname" class="form-label">Rol Adı</label>
                    <input type="text" class="form-control" id="categoryname" asp-for="Name">
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="/Role/Index/" class="btn btn-danger">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
