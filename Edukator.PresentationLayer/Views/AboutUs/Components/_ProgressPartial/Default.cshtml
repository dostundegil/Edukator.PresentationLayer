                    <h6 class="progress-tittle">@item.StatisticTitle1 <span class="">@item.StatisticValue1%</span></h6>
                    <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @item.StatisticValue1%" aria-valuenow="90"
                             aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                </div>
                    <div class="progress-info info2">
                        <h6 class="progress-tittle">@item.StatisticTitle2 <span class="">@item.StatisticValue2%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @item.StatisticValue2%" aria-valuenow="90"
                                 aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <div class="progress-info info3">
                        <h6 class="progress-tittle">@item.StatisticTitle3 <span class="">@item.StatisticValue3%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @item.StatisticValue3%" aria-valuenow="90"
                                 aria-valuemin="0" aria-valuemax="100">
