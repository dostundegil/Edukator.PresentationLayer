@model Edukator.EntityLayer.Concrate.Message
<div class="form-inner-cont mt-5">
    <form action="SendMessage" method="post" class="signin-form">
        <div class="form-grids">
            <div class="form-input">
                <input type="text" asp-for="Name" placeholder="Adınızı Girin *"
                       required="" />
            </div>
            <div class="form-input">
                <input type="text" asp-for="Subject" placeholder="Konu * "
                       required />
            </div>
        </div>
        <div class="form-input mt-4">
            <input type="email" asp-for="Mail" placeholder="Mail *"
                   required />
        </div>
        <div class="form-input">
            <textarea asp-for="MessageContent" placeholder="Mesajınız"
                      required=""></textarea>
        </div>
        <div class="text-right">
            <button class="btn btn-style btn-primary">Gönder</button>
        </div>
    </form>
</div>
        </div>
    </div>
