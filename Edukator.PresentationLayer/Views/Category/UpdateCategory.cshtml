@model Edukator.EntityLayer.Concrate.Category
@{
    ViewData["Title"] = "Edukator | Kategori Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header text-white bg-primary">Kategori Güncelle</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <input type="hidden" asp-for="CategoryID" />
                    <label for="categoryname" class="form-label">Kategori Adı</label>
                    <input type="text" class="form-control" id="categoryname" asp-for="CategoryName">
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="/Category/Index/" class="btn btn-danger">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

