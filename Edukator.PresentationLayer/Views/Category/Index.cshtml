@model List<Edukator.EntityLayer.Concrate.Category>
@{
    ViewData["Title"] = "Edukator | Kategoriler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="card">
        <div class="card-header text-white bg-primary">Kategori İşlemleri</div>
        <div class="card-body">
            <table class="table table-borderless">

                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Kurslar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.CategoryID</th>
                            <td>@item.CategoryName</td>
                            <td><a href="#" id="deleteButton" onclick="deleteItem('/Category/DeleteCategory/@item.CategoryID')" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning">Güncelle</a></td>
                            <td><a href="#" class="btn btn-outline-dark">Kurslara Git</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
    <a href="/Category/AddCategory/" class="btn btn-outline-primary mt-2">Yeni Kategori Girişi</a>
</div>
