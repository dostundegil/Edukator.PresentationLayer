<section class="w3l-stats-main" id="stats">
    <div class="container">
        <div class="row stats-con py-lg-0 py-5">
            <div class="col-lg-6 stats-content-right mb-lg-0 mb-lg-5 mb-2">
                <a href="#service" class="d-block zoom">
                    <img src="~/Edukator-Starter/assets/images/ab1.jpg" alt=""
                         class="img-fluid" />
                </a>
            </div>
            <div class="col-lg-6 stats-content-left pl-lg-5">

                <div class="stats_info counter_grid1 text-left mt-lg-5 mt-4">
                    <div class="icon stat-icon">
                        <p class="counter">@ViewBag.v1</p>
                    </div>
                    <div class="stat-icon-des">

                        <h4>
                            Toplam Kategori Sayısı
                        </h4>
                        <p class="para-stat">
                            Yazılımdan müziğe, fotoğraftan girişime, resimden İngilizce'ye kadar onlarca farklı kategori.
                        </p>
                    </div>
                </div>
                <div class="stats_info counter_grid text-left mt-lg-5 mt-4">
                    <div class="icon stat-icon">
                        <p class="counter">@ViewBag.v2</p>
                    </div>
                    <div class="stat-icon-des">

                        <h4>Toplam Kurs Sayısı</h4>
                        <p class="para-stat">
                            Alanında uzman eğitmenlerin, profesyonelce hazırladığı kurslarımız.
                        </p>
                    </div>
                </div>
                <div class="stats_info counter_grid text-left mt-lg-5 mt-4">
                    <div class="icon stat-icon">
                        <p class="counter">@ViewBag.v3</p>
                    </div>
                    <div class="stat-icon-des">

                        <h4>Toplam Öğrenci Sayısı</h4>
                        <p class="para-stat">
                            Bizi tercih ederek kendilerini sürekli geliştiren öğrencilerimiz.
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>