@model List<Edukator.EntityLayer.Concrate.SocialMedia>
@{
    ViewData["Title"] = "Edukator | Sosyal Medya";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container">
    <div class="card">
        <div class="card-header text-white bg-primary">Sosyal Medya</div>
        <div class="card-body">
            <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Siteye Git</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@item.SocialMediaID</th>
                    <td>@item.SocialMediaName</td>
                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-warning">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>
                </tr>
                }
            </tbody>

        </table>
        </div>
        
    </div>
    <a href="/SociaMedia/AddSocialMedia/" class="btn btn-outline-primary mt-2">Yeni Sosyal Medya Girişi</a>
</div>

