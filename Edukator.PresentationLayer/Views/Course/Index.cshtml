@model List<Edukator.EntityLayer.Concrate.Course>
@{
    ViewData["Title"] = "Edukator | Kurslar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header text-white bg-primary">Kurslar</div>
        <div class="card-body">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Fiyat</th>
                        <th scope="col">Kategori</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.CourseID</th>
                            <td>@item.CourseTitle</td>
                            <td>@item.Price ₺</td>
                            <td>@item.Category.CategoryName</td>
                            <td><a href="#" id="deleteButton" onclick="deleteItem('/Course/DeleteCourse/@item.CourseID')" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-outline-warning">Güncelle</a></td>
                            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
    <a href="/Course/AddCourse/" class="btn btn-outline-primary mt-2">Yeni Kurs Girişi</a>
</div>
